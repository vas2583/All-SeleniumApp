      public void screenShot() throws IOException {
    	  File f1=((TakesScreenshot)driver).getScreenshotAs(OutputType.FILE);
    	 FileUtils.copyFile(f1, new File("G:\\screenshot\\hrms2.png"));
    	  
      }
}
